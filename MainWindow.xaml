<Window x:Class="zhopaSArfoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zhopaSArfoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="YetAnotherGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Last_Name}" Header="Ф"/>
                <DataGridTextColumn Binding="{Binding First_Name}" Header="И"/>
                <DataGridTextColumn Binding="{Binding Middle_Name}" Header="О"/>
                <DataGridTextColumn Binding="{Binding Book.Book_Name}" Header="Название"/>
                <DataGridTextColumn Binding="{Binding Book.Book_Author}" Header="Автор"/>
                <DataGridTextColumn Binding="{Binding Book.Book_Year}" Header="Год"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="715,385,0,0" VerticalAlignment="Top" Height="34" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
